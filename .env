# .env
# Application
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000,https://your-app.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# JWT
JWT_SECRET=your-super-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database
MONGODB_URI=mongodb://localhost:27017/wallet-auth

# Arweave
ARWEAVE_HOST=arweave.net
ARWEAVE_PORT=443
ARWEAVE_PROTOCOL=https
ARWEAVE_TIMEOUT=20000
ARWEAVE_LOGGING=false
ARWEAVE_KEY={"kty":"RSA",...} # Your Arweave key JSON

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info
LOG_FILE=app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7